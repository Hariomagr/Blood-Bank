<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dellpc.bloodbank">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Homescreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DonorInfo"/>
        <activity android:name=".ViewListContents" />
        <activity android:name=".ViewListContents1" />
        <activity android:name=".Loign" />
        <activity android:name=".Register" />
        <activity android:name=".Acceptdonate" />
        <activity android:name=".Donor" />
        <activity android:name=".bloodselection" />
        <activity android:name=".Admin" />
        <activity android:name=".AdminLogin" />
        <activity android:name=".AdminDonorInfo" />
    </application>

</manifest>